@page
@model SistemaWeb.Pages.Sucursales.IndexSucursal

@{
    ViewData["Title"] = "Sucursales";
}

<!DOCTYPE html>

<html lang="es">
<head>
    <title>Sucursales</title>
</head>
<body>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Sucursales Registradas</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="CrearSucursal" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp;Crear Sucursal
            </a>
        </div>
    </div>
    
    <br/><br/>
    
    <table class="table table-bordered table-striped" style="width: 70%">
        <thead>
        <tr>
            <th>Nombre Sucursal</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.Sucursales)
        {
            <tr>
                <td style="width: 50%">@obj.Nombre</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                    <a asp-page="DetalleSucursal" asp-route-id="@obj.SucursalId" class="btn btn-primary mx-2">
                        <i class="bi bi-journal-text"></i>
                    </a>
                    </div>
                </td>
            </tr>
        }
        
        </tbody>
    </table>
</div>
</body>
</html>