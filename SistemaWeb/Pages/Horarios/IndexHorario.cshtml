@page
@model SistemaWeb.Pages.Cargos.IndexHorario

@{
    ViewData["Title"] = "Horarios";
}

<!DOCTYPE html>

<html lang="es">
<head>
    <title>Horarios</title>
</head>
<body>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Horarios Registrados</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="CrearHorario" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp;Crear Horario
            </a>
        </div>
    </div>
    
    <br/><br/>
    
    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>Dia Inicio</th>
            <th>Hora Inicio</th>
            <th>Dia Termino</th>
            <th>Hora Termino</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.Horarios)
        {
            <tr>
                <td style="width: 20%">@obj.DiaInicio</td>
                <td style="width: 20%">@obj.HoraInicio</td>
                <td style="width: 20%">@obj.DiaTermino</td>
                <td style="width: 20%">@obj.HoraTermino</td>
                <td>
                    <div class="w-100 btn-group" role="group">
                    <a asp-page="EditarHorario" asp-route-id="@obj.HorarioId" class="btn btn-primary mx-2">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-page="EliminarHorario" asp-route-id="@obj.HorarioId" class="btn btn-danger mx-2">
                        <i class="bi bi-trash-fill"></i>
                    </a>
                    </div>
                </td>
            </tr>
        }
        
        </tbody>
    </table>
</div>
</body>
</html>