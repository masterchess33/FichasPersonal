@page
@model SistemaWeb.Pages.Direcciones.IndexDireccion

@{
    ViewData["Title"] = "Direcciones";
}

<!DOCTYPE html>

<html lang="es">
<head>
    <title>Direcciones</title>
</head>
<body>
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Direcciones Registradas</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="CrearDireccion" asp-route-returnRute="IndexDireccion" class="btn btn-primary">
                <i class="bi bi-plus-square"></i> &nbsp;Crear Dirección
            </a>
        </div>
    </div>

    <br/><br/>

    <table class="table table-bordered table-striped" style="width: 100%">
        <thead>
        <tr>
            <th>Calle</th>
            <th>Departamento</th>
            <th>Ciudad</th>
            <th>Pais</th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model.Direcciones)
        {
            <tr>
                <td style="width: 30%">@obj.Calle</td>
                <td style="width: 10%">@obj.Departamento</td>
                <td style="width: 20%">@obj.Ciudad</td>
                <td style="width: 20%">@obj.Pais</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-page="EditarDireccion" asp-route-id="@obj.DireccionId" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-page="EliminarDireccion" asp-route-id="@obj.DireccionId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </div>
                </td>
            </tr>
        }

        </tbody>
    </table>
</div>
</body>
</html>